<h1 class="text-center mb-3">{{header}}</h1>

<form action="/weather" method="POST" class="mb-4">
  <div class="form-group mb-3">
    <label for="name" class="mb-3">Enter a City</label>
    <input type="text" name="cityName" class="form-control">
  </div>
  <input type="submit" value="SUBMIT" class="btn btn-primary btn-block">
  <br>
  <label for="name" class="mt-3 block">{{cityTemp}}</label>
  <br>
  <label for="name" class="mt-3 block">{{feelsLikeTemp}}</label>
  <br>
  <label for="name" class="mt-3 block">{{weatherDescription}}</label>
  <br>
  <label for="name" class="mt-3 block">{{windSpeed}}</label>
  <br>
  <label for="name" class="mt-3 block">{{countryName}}</label>
</form>